<?xml version="1.0"?>
<robot name="prestobot" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:arg name="is_sim" default="false"/>
    <xacro:arg name="port" default="/dev/ttyUSB0" />

    <xacro:include filename="common_properties.xacro" />
    <xacro:include filename="prestobot.parts.xacro" />
    <xacro:include filename="prestobot.ros2_control.xacro" />

    <xacro:if value="$(arg is_sim)">
        <xacro:include filename="prestobot.gazebo.xacro" />
    </xacro:if>

</robot>