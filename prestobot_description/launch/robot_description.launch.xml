<launch>

    <!-- Robot arguments -->
    <arg name="urdf_path" default="$(find-pkg-share prestobot_description)/urdf/prestobot.urdf.xacro" />
    <arg name="is_sim" default="false" />
    <arg name="port" default="/dev/ttyUSB1" />

    <!-- Let variables for cleaner paths and commands -->
    <let name="robot_description" value="$(command 'xacro $(var urdf_path) is_sim:=$(var is_sim) port:=$(var port)')" />

    <!-- Robot State Publisher -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher" >
        <param name="robot_description" value="$(var robot_description)" />
    </node>

</launch>